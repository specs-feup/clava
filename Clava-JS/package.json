{
  "name": "@specs-feup/clava",
  "version": "3.0.32",
  "description": "A C/C++ source-to-source compiler written in Typescript",
  "type": "module",
  "files": [
    "api",
    "code",
    "java-binaries",
    ".gitignore",
    "eslint.config.js",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json",
    "typedoc.config.js"
  ],
  "bin": {
    "clava": "./code/index.js"
  },
  "scripts": {
    "run": "node ./code/index.js",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint .",
    "test": "bun test",
    "test:api": "bun test api",
    "test:code": "bun test code",
    "test:cov": "bun test --coverage",
    "test:watch": "bun test --watch",
    "build-interfaces": "npx lara-build-interfaces --input ../ClavaWeaver/src/pt/up/fe/specs/clava/weaver/CxxWeaver.json --lara @specs-feup/lara/LaraJoinPointSpecification.json --output api/Joinpoints.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/specs-feup/clava.git",
    "directory": "Clava-JS"
  },
  "keywords": [
    "C",
    "C++",
    "source-to-source",
    "compiler",
    "metaprogramming"
  ],
  "author": "L. Sousa",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/specs-feup/clava/issues"
  },
  "homepage": "https://github.com/specs-feup/clava#readme",
  "dependencies": {
    "@specs-feup/lara": "^3.5.0",
    "cytoscape": "^3.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/debug": "^4.1.12",
    "@types/java": "^0.9.6",
    "@types/node": "^20.14.10",
    "@types/yargs": "^17.0.33",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "node-notifier": "^10.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
