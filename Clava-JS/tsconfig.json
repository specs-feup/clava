{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    //"allowJs": true,
    //"checkJs": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    //"esModuleInterop": true
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@specs-feup/clava": ["."],
      "@specs-feup/clava/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
